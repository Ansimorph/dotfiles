[init]
    defaultBranch = main
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[user]
	name = BjoÌˆrn Ganslandt
	email = b.ganslandt@gmail.com
[core]
	excludesfile = /Users/bg/.gitignore_global
	autocrlf = input
	trustctime = false
	editor = hx
	pager = delta
[mergetool]
	keepBackup = true
	prompt = false
[merge]
    conflictstyle = diff3
[diff]
    colorMoved = default
[interactive]
	diffFilter = delta --color-only
[color]
	ui = auto
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
[push]
	default = current
[delta]
	syntax-theme = Nord
