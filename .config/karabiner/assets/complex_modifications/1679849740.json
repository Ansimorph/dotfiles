{
    "title": "CAPS LOCK twice & held_down to CTRL",
    "author": "Ramiro Garcia (https://github.com/ranemirusG)",
    "rules": [
        {
            "description": "Press twice caps_lock to activate caps_lock & otherwise held_down and use as CTRL",
            "manipulators": [
                {
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "caps_lock pressed",
                            "value": 1
                        }
                    ],
                    "type": "basic",
                    "from": {
                        "key_code": "caps_lock",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "caps_lock"
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "caps_lock",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "set_variable": {
                                "name": "caps_lock pressed",
                                "value": 1
                            }
                        }
                    ],
                    "to_if_held_down": [
                        {
                            "key_code":"left_control"
                        }
                    ],
                    "parameters":{
                    "basic.to_if_held_down_threshold_milliseconds": 0
                    },
                    "to_delayed_action": {
                        "to_if_invoked": [
                            {
                                "set_variable": {
                                    "name": "caps_lock pressed",
                                    "value": 0
                                }
                            }
                        ],
                        "to_if_canceled": [
                            {
                                "set_variable": {
                                    "name": "caps_lock pressed",
                                    "value": 0
                                }
                            }
                        ]
                    }
                }
            ]
        }
    ]
}
